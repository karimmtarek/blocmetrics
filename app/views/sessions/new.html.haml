.container
  .row
    .col-md-4
      &nbsp;
    .col-md-4
      .well
        %h2 Sign in
        = form_tag(session_path) do
          .form-group
            = label_tag :email
            = email_field_tag :email, nil, autofocus: true, placeholder: 'Email', class: 'form-control'
          .form-group
            = label_tag :password
            = password_field_tag :password, nil, autocomplete: "off", placeholder: 'Password', class: 'form-control'
          .action
            = submit_tag "Sign In", class: "btn btn-primary"